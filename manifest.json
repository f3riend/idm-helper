{
  "manifest_version": 3,
  "name": "AVG Manager",
  "version": "2.0",
  "description": "Advanced Video Grub Manager",

  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "downloads",
    "tabs",
    "scripting",
    "debugger"
  ],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["scripts/injected.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "IDM Helper"
  }
}
